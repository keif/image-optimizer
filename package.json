{
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8",
  "devDependencies": {
    "husky": "^9.1.7",
    "markdownlint-cli": "^0.45.0"
  },
  "scripts": {
    "prepare": "husky",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore web/node_modules",
    "lint:md:fix": "markdownlint '**/*.md' --ignore node_modules --ignore web/node_modules --fix || true",
    "lint:go": "cd api && golangci-lint run",
    "lint:web": "cd web && pnpm lint",
    "lint:web:fix": "cd web && pnpm lint:fix",
    "lint:all": "pnpm lint:md; pnpm lint:go; pnpm lint:web",
    "lint:all:fix": "pnpm lint:md:fix; pnpm lint:web:fix"
  }
}
